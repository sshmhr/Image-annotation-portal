<%- include('partials/loginHeader.ejs') %>
<form  action="/register" method="POST">
<div class="container-login100 m-t-0">
  <div class="wrap-login100">
    <div class="login100-pic " >
      <img src="/images/img-01.png" class = "js-tilt" alt="IMG" data-tilt>
      <div class="wrap-input100 p-t-40 p-l-70" >
        <select class="btn btn-sm btn-secondary dropdown-toggle button-background " name="userType" id="userType" >
          <option value="userTest">Register As User</option>
          <option value="adminTest">Register As Admin</option>
        </select>
      </div>
    </div>


    <div class="login100-form validate-form">
      <span class="login100-form-title">
        Register
      </span>

      <div class="wrap-input100 " >
        <input class="input100" type="text" name="name" placeholder="Name" required>
        <span class="focus-input100"></span>
        <span class="symbol-input100">
          <i class="fa fa-user-circle-o" aria-hidden="true"></i>
        </span>
      </div>

      <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
        <input class="input100" type="email" name="email" placeholder="Email " required>
        <span class="focus-input100"></span>
        <span class="symbol-input100">
          <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
      </div>

      <div class="wrap-input100 validate-input" data-validate = "Password is required">
        <input class="input100" type="password" name="password" placeholder="Password" required >
        <span class="focus-input100"></span>
        <span class="symbol-input100">
          <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
      </div>


      <div class="container-login100-form-btn">
        <button type="submit" class="login100-form-btn">
          Register
        </button>
      </div>

      <div class="text-center p-t-22">
        <% if(session && session.error) { %>
        <span class="txt2" style="color:#ff4444;">
          <%= session.error.toString() %>
        </span>
        <% session.error = null %>
        <% } %>
      </div>

      <div class="text-center p-t-12 p-b-30 ">
        <a class="txt2" href="/login">
          Already a User? Login
          <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
        </a>
      </div>
    </div>
  </div>
</div>
</form>

<%- include('partials/loginFooter.ejs') %>
